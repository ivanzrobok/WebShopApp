@model FirstWebapplication.ViewModels.ShopCarViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    @foreach (var el in Model.shopCart.ListShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Автомобіль:</b>@el.Car.Name <br />
            <b>Ціна:</b>@el.Car.Prise.ToString("c");
        </div>
    }
    <hr /><!--горизонтальна лінія-->
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Купити</a>
</div>